---
// Floating Social Media Buttons Component
---

<div class="fixed bottom-6 right-6 z-50">
  <!-- Toggle Button -->
  <button 
    id="social-toggle"
    class="bg-primary-600 hover:bg-primary-700 text-white p-4 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-110"
    title="Liên hệ"
  >
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
    </svg>
  </button>

  <!-- Social Media Buttons (Hidden by default) -->
  <div id="social-buttons" class="hidden flex flex-col space-y-3 mt-3">
    <!-- Messenger Button -->
    <a 
      href="https://m.me/le.tuan.xe.tai.3848" 
      target="_blank" 
      rel="noopener noreferrer" 
      class="p-3 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-110 group"
      title="Messenger"
    >
      <img src="/mes.png" alt="Messenger" class="w-8 h-8 rounded-full" />
    </a>

    <!-- Facebook Button -->
    <!-- <a 
      href="https://www.facebook.com/le.tuan.xe.tai.3848" 
      target="_blank" 
      rel="noopener noreferrer" 
      class="p-3 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-110 group"
      title="Facebook"
    >
      <img src="/facebook.png" alt="Facebook" class="w-8 h-8" />
    </a> -->

    <!-- Zalo Button -->
    <a 
      href="https://zalo.me/0936777735" 
      target="_blank" 
      rel="noopener noreferrer" 
      class="p-3 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-110 group"
      title="Zalo"
    >
      <img src="/zalo.png" alt="Zalo" class="w-8 h-8 rounded-full" />
    </a>

    <!-- Phone Button -->
    <a 
      href="tel:0936777735" 
      class="p-3 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-110 group"
      title="Gọi điện"
    >
      <img src="/phone.png" alt="Phone" class="w-8 h-8 rounded-full" />
    </a>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const toggleButton = document.getElementById('social-toggle');
    const socialButtons = document.getElementById('social-buttons');
    let isOpen = false;

    // Toggle social buttons
    toggleButton.addEventListener('click', function(e) {
      e.stopPropagation();
      isOpen = !isOpen;
      
      if (isOpen) {
        socialButtons.classList.remove('hidden');
        socialButtons.classList.add('flex');
      } else {
        socialButtons.classList.add('hidden');
        socialButtons.classList.remove('flex');
      }
    });

    // Close when clicking outside
    document.addEventListener('click', function(e) {
      if (isOpen && !toggleButton.contains(e.target) && !socialButtons.contains(e.target)) {
        isOpen = false;
        socialButtons.classList.add('hidden');
        socialButtons.classList.remove('flex');
      }
    });
  });
</script>

<style>
  /* Custom animations for floating buttons */
  .group:hover {
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% {
      box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.7);
    }
    70% {
      box-shadow: 0 0 0 10px rgba(59, 130, 246, 0);
    }
    100% {
      box-shadow: 0 0 0 0 rgba(59, 130, 246, 0);
    }
  }

  /* Mobile responsive adjustments */
  @media (max-width: 768px) {
    .fixed {
      bottom: 4rem;
      right: 1rem;
    }
  }
</style>
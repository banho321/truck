---
import FloatingSocial from "../components/FloatingSocial.astro";

export interface Props {
  title: string;
  description: string;
  image?: string;
  canonical?: string;
}

const { title, description, image = "/og-image.jpg", canonical } = Astro.props;
const canonicalURL = new URL(canonical || Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Google AdSense -->
    <meta name="google-adsense-account" content="ca-pub-XXXXXXXXXXXXXXXX" />
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-AW-17610045880" crossorigin="anonymous"></script>
    <script
      async
      src="https://www.googletagmanager.com/gtag/js?id=AW-17610045880"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "AW-17610045880");
    </script>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    <meta property="og:locale" content="vi_VN" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />

    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Lê Tuấn Xe tải Thaco" />
    <meta
      name="keywords"
      content="xe tải, bán xe tải, xe tải cũ, xe tải mới, truck, commercial vehicle"
    />

    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://xetaithacodaknong.com",
        "@type": "Organization",
        "name": "Lê Tuấn Xe tải Thaco",
        "url": "https://xetaithacodaknong.com",
        "logo": "https://xetaithacodaknong.com/logo.png",
        "description": "Chuyên bán xe tải chỉnh hảng Thaco và mới, uy tín, chất lượng cao",
        "address": {
          "@type": "PostalAddress",
          "addressCountry": "VN"
        },
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+84-936-777-735",
          "contactType": "sales"
        }
      }
    </script>
  </head>
  <body class="font-sans antialiased">
    <slot />
    <FloatingSocial />
  </body>
</html>
